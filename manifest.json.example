{
    "manifest_version": 2,

    "name": "9GAG 字典",
    "description": "方便的 9GAG 字典 讓您不用輸入就可以查字典",
    "version": "0.1",

    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "images/grey-19.png"
    },
    "permissions": [
        "tabs",
        "http://9gag.com/",
        "http://averangeall.csie.org:5566/",
        "http://daisy.csie.org:5566/",
        "http://localhost:5566/"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self' https://www.youtube.com/"
}
